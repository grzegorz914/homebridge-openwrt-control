{
    "homebridge": {
        "description": "Limited homebridge access for wireless, network control and interface status",
        "read": {
            "ubus": {
                "network.wireless": [
                    "*"
                ],
                "network.interface": [
                    "*"
                ],
                "system": [
                    "*"
                ]
            }
        },
        "write": {
            "ubus": {
                "uci": [
                    "get",
                    "set",
                    "commit"
                ],
                "network.wireless": [
                    "down",
                    "up",
                    "reload"
                ],
                "network": [
                    "reload"
                ],
                "system": [
                    "reboot"
                ],
                "service": [
                    "restart"
                ]
            }
        }
    }
}